<div class="custom-card">
    <div class="container py-5">
        <h4 class="card-title d-flex justify-content-between align-items-center"> <a href="/assignments/add/{{courseId}}"><i
                    class="fas fa-plus-circle plus-icon"></i>Agregar nueva evidencia</a>
        </h4>
        <h2 class="text-center mb-5 font-weight-bold">Evidencias</h2>
        <div class="row">
            {{#each assignments}}
            <div class="col-md-3">
                <div class="card card-assignment">
                    <div class="card-header">
                        <h4 class="card-title d-flex justify-content-between align-items-center">{{title}} <a
                                href="/assignments/edit/{{_id}}"><i class="fas fa-edit"></i></a> </h4>
                    </div>
                    <div class="card-body ">
                        <div class="card-body text-evidencia">
                            <p>{{description}} </p>
                            <form action="/assignments/delete/{{_id}}?_method=DELETE" method="POST">
                        </div>
                        <div><input type="datetime-local" class="input-time"></div>
                        <form action="">
                        <input type="hidden" name="_method" value="DELETE">
                        <button id="delete-button" type="submit" class="fas fa-trash-alt"></button>
                        </form>
                        <form class="redirect-text">
                            <h2 class="card-title d-flex justify-content-between align-items-center fw-bold mt-2"><a
                                    href="/responseActivity/{{_id}}"><i class="fas fa-directions redirect-icon"></i>Ir responder actividad</a> </h2>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>