<div class="custom-card">
<div class="container py-5">
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Assignment</h3>
        </div>
        <div class="card-body">
            <form action="/assignments/edit/{{assignment._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" value="{{assignment.title}} ">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control"  >{{assignment.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                </div>

            </form>
        </div>
    </div>
</div>
</div>
</div>