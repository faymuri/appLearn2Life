<div class="container py-5">
    <form class="course-text">
        <h4 class="card-title d-flex justify-content-between align-items-center"> <a href="/courses/add/{{groupId}}"><i
                    class="fas fa-plus-circle plus-icon"></i>Agregar nuevo curso</a>
        </h4>
    </form>
    <h2 class="text-center mb-5 font-weight-bold">Cursos</h2>
    <div class="row">
        {{#if roleInterface}}
        {{#each courses}}
        <div class="col-md-3">
            <div class="card cards-course">
                <div class="card-header">
                    <h4 class="card-title d-flex justify-content-between align-items-center">{{title}} <a
                            href="/courses/edit/{{_id}}"><i class="fas fa-edit"></i></a> </h4>
                </div>
                <div class="card-body">
                    <div class="card-course-text">
                        <p>{{description}} </p>
                    </div>
                    <form action="/courses/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button id="delete-button" type="submit" class="fas fa-trash-alt"></button></button>
                    </form>
                    <form class="redirect-text">
                        <h2 class="card-title d-flex justify-content-between align-items-center fw-bold mt-2"><a
                                href="/assignments/{{_id}}"><i class="fas fa-directions redirect-icon"></i>Ir a este
                                grupo</a> </h2>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}

        {{else}}
        {{#each courses}}
        <div class="col-md-3">
            <div class="card cards-course">
                <div class="card-header">
                    <h4 class="card-title d-flex justify-content-between align-items-center">{{title}} </h4>
                </div>
                <div class="card-body">
                    <div class="card-course-text">
                        <p>{{description}} </p>
                    </div>
                    <form class="redirect-text">
                        <h2 class="card-title d-flex justify-content-between align-items-center fw-bold mt-2"><a
                                href="/assignments/{{_id}}"><i class="fas fa-directions redirect-icon"></i>Ir a este
                                grupo</a> </h2>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}

        {{/if}}
    </div>
</div>