
<div class="container py-5">
    <h2 class="text-center mb-5 font-weight-bold">Grupos</h2>
    <div class="row">
        {{#each groups}}
        <div class="col-md-3">
            <div class="card cards-groups">
                <div class="card-header">
                    <h4 class="card-title d-flex justify-content-between align-items-center fw-bold">{{title}} <a
                            href="/groups/edit/{{_id}}"><i class="fas fa-edit"></i></a> </h4>
                </div>
                <div class="card-body">
                    <div class="card-body">
                        <p>{{description}} </p>
                    </div>
                    <form action="/groups/delete/{{_id}}?_method=DELETE" class="btn-cards" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button id="delete-button" type="submit" class="fas fa-trash-alt"></button>
                    </form>
                    <form class="redirect-text">
                        <h2 class="card-title d-flex justify-content-between align-items-center fw-bold mt-2"><a
                                href="/courses/{{_id}}"><i class="fas fa-directions redirect-icon"></i>Ir a este curso</a> </h2>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>