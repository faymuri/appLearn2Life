<div class="container py-5">
    <div class="row">
        {{#each groups}}
        <div class="col-md-3">
            <div class="card cards-groups">
                <div class="card-header">
                    <h4 class="card-title d-flex justify-content-between align-items-center fw-bold">{{title}} <a
                            href="/groups/edit/{{_id}}"><i class="fas fa-edit"></i></a> </h4>
                </div>
                <div class="card-body">
                    <div class="card-body">
                        <p>{{description}} </p>
                    </div>
                    <form action="/groups/delete/{{_id}}?_method=DELETE" class="btn-cards" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn block btn-sm">Delete</button>
                    </form>
                    <form>
                        <h4 class="card-title d-flex justify-content-between align-items-center fw-bold"><a
                                href="/courses/{{_id}}"><i class="fas fa-edit"></i></a> </h4>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>